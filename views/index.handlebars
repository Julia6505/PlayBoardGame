<div class="alert alert-info text-center"role="alert">
 <h1>Play the Game!!</h1>
</div>
<div id=container>
    <div class="row">
        <div class="col been-played">
        <h2>Been Played</h2>
        {{#each newgames}}
            {{#if this.played}}
            {{this.newgame}}
            {{/if}}
            {{/each}}
        </div>
        <div class="col-5">
                <form action="/" method="POST" id="enter-game">
                    <div class="form-group">
                    <label for="enter-game"><h3>Game Name:</h3></label>
                    <input type="text" class="form-control"  name="newgame" aria-describedby="emailHelp">
                    <button type="submit" class="btn btn-dark mx-auto" style="width: 200px;" id="submit">Submit</button>
                </form>
                </div>
        </div>
    <div class="col">
            <div>Play this game!</div>
            {{#each newgames}}
                {{#unless this.played}}
                <div class="has-played" name={{this.newgame}}>
                    <p>{{this.newgame}}</p>
                    <form action="/update/{{this.id}}" method="POST">
                    <input type="hidden" name="played" value="false">
                    <button type="submit" class="btn btn-info played">Played It!</button>
                    </form>
                </div>
                  {{/unless}}
            {{/each}}
          
    </div>
</div>
</div>
